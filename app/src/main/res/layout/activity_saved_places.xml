<?xml version="1.0" encoding="utf-8"?>


<!-- activity_saved_places.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- <Button
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         /> -->

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="38dp"
        android:text="Lagret Steder"
        android:textStyle="bold"
        android:textColor="#A9A9A9"
        app:layout_constraintBottom_toTopOf="@id/viewButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp" />


    <Button
        android:id="@+id/viewButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vis"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/backButton"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tilbake"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toEndOf="@+id/viewButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!--   <Button
           android:id="@+id/deleteButton"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="Slett"
           app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
           app:layout_constraintStart_toEndOf="@+id/editPlaceButton"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginTop="20dp" />
           -->


    <ListView
        android:id="@+id/savedPlacesList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/viewButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:divider="@color/black"
        android:dividerHeight="3dp"
        android:listSelector="@color/cardview_shadow_start_color"
        android:layout_marginTop="35dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>
